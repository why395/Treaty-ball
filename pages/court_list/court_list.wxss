/* pages/court_list/court_list.wxss */
.first_tab .court_item {
  padding: 2px 0;
  display: flex;
  border-bottom: 1px solid #ccc;
}
.first_tab .court_item .court_img_wrap {
  flex: 3;
  display: flex;
  justify-content: center;
  align-items: center;
}
.first_tab .court_item .court_img_wrap image {
  width: 100%;
  height: 90px;
}
.first_tab .court_item .court_info_wrap {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding-left: 10px;
}
.first_tab .court_item .court_info_wrap .court_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  font-size: 30rpx;
  font-weight: 550;
}
.first_tab .court_item .court_info_wrap .court_score {
  color: #EE9611;
}
.first_tab .court_item .court_info_wrap .court_price {
  color: #FF3333;
  font-size: 32rpx;
  float: right;
}
