/**index.wxss**/
/**轮播图**/
swiper{
  width:100%;
  height: 150px;
}
swiper-item{
  width: 100%;
  height: 100%;
}
swiper-item image{
  width: 100%;
  height: 100%;
}


.content-box{
  width:100%;
  background: #fff;
  padding:10px;
  margin-bottom: 4px;
}
.header{
  display: flex;
  justify-content: space-between;
  border-left:2px solid #3DB85D;
  padding-left: 8px;
  padding-right:10px;
  align-items: center;
}
text.all{
  font-size: 12px;
  color:#3DB85D;
}
.body{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
}
.body-item.single{
  width: 100%;
  padding:11px;
  overflow: hidden;
  position: relative;
}
.body-item.single image{
  height: 400rpx;
}
.body-item.single view.title{
  margin-bottom: 2px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.body-item.single view.title view{
  display: inline-block;
}
.body-item.single view.title text.rank{
  color:darkorange;
}
.body-item.single view.title .distance text{
  color:#666;
  font-size:12px;
}
.body-item.single view.location{
  color:#999;
  font-size:12px;
  font-weight:lighter;
}
.body-item.single view.price text{
  color:#3DB85D;
}
.body-item.single view.price .tag{
  border:1px solid darkorange;
  border-radius: 2px;
  margin:0 2px;
  color: darkorange;
  font-size: 10px;
  padding:0px 3px;
}
.body-item.single view.price text.price{
  margin-right:4px;
}
.office .body-item{
  width: 45%;
  height:200rpx;
  background: #ccc;
  margin: 5px;
  position: relative;
  overflow: hidden;
}
.body-item image{
  width:100%;
  height:85px;
}
.office .body-item text{
  left:0px;
  bottom:0px;
  width: 100%;
  padding:8px 6px 4px 6px;
  color:#fff;
  font-size: 11px;
  position: absolute;
  font-weight: lighter;
  display: inline-block;
  font-family: "宋体";
  background: -webkit-linear-gradient(bottom,rgba(0, 0, 0, 0.6),rgba(0, 0, 0, 0));
}