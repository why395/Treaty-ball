/* pages/myCollects/myCollects.wxss */

.collect{
  width: 100%;
  height: 200rpx;
  padding-top: 20rpx;
  padding-left: 20rpx;
  display: flex;
  position: relative;
  border-bottom: 0.1rpx solid #ddd;
  margin-bottom:10rpx;
}
.collect.hidden{
  display: none;
}
.collect .img{
  top:20rpx;
  left:20rpx;
  width:250rpx;
  height: 180rpx;
  background: #ccc;
  position: absolute;
}
.collect .img image{
  width:100%;
  height: 100%;
}
.collect .content{
  padding:20rpx 20rpx 20rpx 240rpx;
  width: 100%;
  background: #fff;
}
.item{
  padding-left: 30rpx;
}

.collect .content .item.loc{
  display: flex;
  justify-content: space-between;
}
.collect .content .item:first-child{
  margin-bottom: 10rpx;
}
.collect .content .item .location{
  color:#666;
  font-size: 0.8rem;
}
.collect .content .item .title{
  font-size: 0.9rem;
  font-weight: 600;
}
.collect .content .item .distance{
  color:red;
  font-weight: 600;
  font-size: 0.8rem;
}

.collect .content .item:last-child{
  margin-top: 6rpx;
}
.collect .content .item .look{
  color:#3DB85D;
  font-size:0.6rem;
  border:0.1rpx solid #3DB85D;
  padding: 4rpx 12rpx;
  margin-right: 12rpx;
}
.collect .content .item .remark{
  color:darkorange;
  font-size:0.6rem;
  border:0.1rpx solid darkorange;
  padding: 4rpx 12rpx;
  margin-top: 30rpx;
}
